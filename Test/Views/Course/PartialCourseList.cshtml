@model List<Test.Models.Course>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>
                        <button type="button" class="btn  btn-sm" data-id="@item.Id" data-name="@item.Name" data-code="@item.Code" id="editBtn" style="color: #065af3"><span><i class="fa fa-edit"></i></span></button>
                        <button type="button" class="btn  btn-sm" data-id="@item.Id" id="deleteBtn" style="color: #c30d0d"><span><i class="fa fa-trash"></i></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
